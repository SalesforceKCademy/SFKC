        }
        @keyframes blinkHighlight {
            0% {
                background-color: #FFD700;  /* Gold background color */
                color: #FF4500;  /* Orange text color */
            }
            50% {
                background-color: transparent;
                color: #FFD700;  /* Gold text color */
            }
            100% {
                background-color: #FFD700;
                color: #FF4500;  /* Orange text color */
            }
        }
        .nav {
            margin-bottom: 20px;
